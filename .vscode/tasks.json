{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "command": "zig",
            "args": [
                "build",
                "-Doptimize=ReleaseSmall"
            ],
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "zig",
            "args": [
                "build"
            ],
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/zig-cache",
                "&&",
                "rm",
                "-rf",
                "${workspaceFolder}/zig-build"
            
            ],
        },
        {
            "label": "Commit Release",
            "type": "shell",
            "command": "grunt",
            "args": [
                "screeps"
            ],
            "dependsOn": "Build Release"
        },
        {
            "label": "Commit Debug",
            "type": "shell",
            "command": "grunt",
            "args": [
                "screeps"
            ],
            "dependsOn": "Build Debug"
        },
        {
            "label": "Setup",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
        },
    ]
}